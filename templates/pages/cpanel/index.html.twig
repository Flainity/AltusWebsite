{% extends 'base.html.twig' %}

{% block body %}
    {% include 'components/header.html.twig' with {
        title: 'User Control Panel',
        description: 'Control your accounts settings, profile information, characters and statistics from a single location!'
    } %}
    <div class="md:container bg-neutral-900 rounded-xl shadow-lg p-10 mx-auto my-10">
        <div class="space-y-12">
            <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 pb-12 md:grid-cols-3">
                <div>
                    <h2 class="text-base font-semibold leading-7 text-gray-200">Account</h2>
                    <p class="mt-1 text-sm leading-6 text-gray-400">This information will be displayed publicly so be careful what you share.</p>
                </div>

                <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-7 sm:grid-cols-6 md:col-span-2">
                    <div class="sm:col-span-3">
                        <label for="website" class="block text-sm font-medium leading-6 text-gray-200">Username</label>
                        <div class="mt-2">
                            <div class="flex rounded-md bg-white/5 ring-1 ring-inset ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
                                <input type="text" disabled name="website" id="website" class="flex-1 mx-2 border-0 bg-transparent py-1.5 pl-1 text-white focus:ring-0 sm:text-sm sm:leading-6 cursor-not-allowed" placeholder="{{ app.user.userIdentifier }}">
                            </div>
                        </div>
                    </div>

                    <div class="sm:col-span-3">
                        <label for="email" class="block text-sm font-medium leading-6 text-gray-200">Email-Address</label>
                        <div class="mt-2">
                            <div class="flex rounded-md bg-white/5 ring-1 ring-inset ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
                                <input type="email" disabled name="email" id="email" class="flex-1 mx-2 border-0 bg-transparent py-1.5 pl-1 text-white focus:ring-0 sm:text-sm sm:leading-6 cursor-not-allowed" placeholder="{{ app.user.email }}">
                            </div>
                        </div>
                    </div>

                    <div class="sm:col-span-3">
                        <label for="password" class="block text-sm font-medium leading-6 text-gray-200">Password</label>
                        <div class="mt-2">
                            <div class="flex rounded-md bg-white/5 ring-1 ring-inset ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
                                <input type="password" disabled name="password" id="password" class="flex-1 mx-2 border-0 bg-transparent py-1.5 pl-1 text-white focus:ring-0 sm:text-sm sm:leading-6 cursor-not-allowed" placeholder="**********">
                            </div>
                            <p class="mt-1 text-sm leading-6 text-gray-400">Want to change your password? Click here</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 pb-12 md:grid-cols-3">
                <div>
                    <h2 class="text-base font-semibold leading-7 text-gray-200">Characters</h2>
                    <p class="mt-1 text-sm leading-6 text-gray-400">Here you can see all your characters</p>
                </div>

                <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2">
                    <div class="sm:col-span-6">
                        <character-list/>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}