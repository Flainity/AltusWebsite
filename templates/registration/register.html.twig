{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="md:container bg-neutral-900 rounded-xl shadow-lg p-10 sm:mx-auto sm:w-full sm:max-w-sm">
            <div class="space-y-12">
                <div class="sm:mx-auto sm:w-full sm:max-w-sm">
                    <img class="mx-auto h-32 w-auto" src="{{ asset('build/images/AltusLogo.png') }}" alt="Altus Online">
                    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-200">Register an account</h2>
                </div>

                {{ form_errors(registrationForm) }}

                <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
                    {{ form_start(registrationForm) }}
                    <div class="py-2">
                        {{ form_label(registrationForm.username) }}
                        <div class="flex rounded-md bg-white/5 ring-1 ring-inset ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
                            {{ form_widget(registrationForm.username) }}
                        </div>
                    </div>

                    <div class="py-2">
                        {{ form_label(registrationForm.email) }}
                        <div class="flex rounded-md bg-white/5 ring-1 ring-inset ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
                            {{ form_widget(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="py-2">
                        {{ form_label(registrationForm.plainPassword) }}
                        <div class="flex rounded-md bg-white/5 ring-1 ring-inset ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
                            {{ form_widget(registrationForm.plainPassword) }}
                        </div>
                    </div>

                    <div class="py-2">
                        <div class="relative flex items-start">
                            <div class="flex h-6 items-center">
                                {{ form_widget(registrationForm.agreeTerms) }}
                            </div>
                            <div class="ml-3 text-sm leading-6">
                                {{ form_label(registrationForm.agreeTerms) }}
                                <p id="comments-description" class="text-gray-400">With this checkbox you agree to our terms of service.</p>
                            </div>
                        </div>

                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="py-2">
                        <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Register</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
