<header class="bg-black shadow-md sticky top-0 z-50">
    <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
        <div class="flex lg:flex-1">
            <a href="{{ path('index') }}" class="-m-1.5 p-1.5">
                <span class="sr-only">Altus Online</span>
                <img class="h-12 w-auto" src="{{ asset('build/images/AltusLogoBigNoEffect.png') }}" alt="">
            </a>
        </div>
        <div class="flex lg:hidden">
            <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
                <span class="sr-only">Open main menu</span>
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
            </button>
        </div>
        <div class="hidden lg:flex lg:gap-x-12">
            <a href="#" class="text-sm font-semibold leading-6 text-gray-200">Downloads</a>
            {% if app.user %}
                <a href="{{ path('account.controlpanel.index') }}" class="text-sm font-semibold leading-6 text-gray-200">Control Panel</a>
                <a href="{{ path('donate') }}" class="text-sm font-semibold leading-6 text-gray-200">Donate</a>
                <a href="{{ path('shop.index') }}" class="text-sm font-semibold leading-6 text-gray-200">Item Mall</a>
            {% endif %}
        </div>
        <div class="hidden lg:flex lg:flex-1 lg:justify-end">
            {% if app.user %}
                <a href="{{ path('account.security.logout') }}" class="text-sm font-semibold leading-6 text-gray-200">Welcome {{ app.user.userIdentifier }} <span aria-hidden="true">&rarr;</span></a>
            {% else %}
                <a href="{{ path('account.security.login') }}" class="text-sm font-bold leading-6 text-gray-200">Login</a>
                <span class="px-1.5">|</span>
                <a href="{{ path('account.security.register') }}" class="text-sm font-bold leading-6 text-gray-200">Register</a>
            {% endif %}
        </div>
    </nav>
</header>